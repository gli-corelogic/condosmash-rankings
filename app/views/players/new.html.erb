<%= form_for @player, :html => {:class => "form-horizontal center"} do |f| %>
  <div class="container">
    <h2>Create a new player</h2>

    <div class="form-group">
      <%= f.label :name, :class => 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => 'form-control', :placeholder => 'Enter name', :type => 'text' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, :class => 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_area :description, :class => 'form-control', :placeholder => 'Enter description', :type => 'text' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :rating, :class => 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_field :rating, :class => 'form-control', :placeholder => 'Enter rating', :type => 'number' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Create player', :type => 'submit', :class => 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>