<div class="container">
  <div class="row">
    <div class="col-lg-2">
      Table here
    </div>
    <div class="col-lg-10">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Rating</th>
        </tr>
        </thead>
        <tbody>
        <% @players.each do |player| %>
          <tr>
            <td><%= player.name %></td>
            <td><%= player.description %></td>
            <td><%= player.rating %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>