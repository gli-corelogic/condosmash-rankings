<div class="container">
  <div class="row">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Rating</th>
        </tr>
        </thead>
        <tbody>
            <% @players.each do |player| %>
              <tr>
                  <td><%= player.name %></td>
                  <td><%= player.description %></td>
                  <td><%= player.rating %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
</div>